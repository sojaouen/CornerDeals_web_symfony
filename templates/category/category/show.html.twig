{% extends 'base.html.twig' %}

{# Page Settings #}
{% set title = "Info sur la catégorie : " ~ category.name %}


{# Page Title #}
{% block title %}{{ title }} - {{ parent() }}{% endblock %}


{# Page Content #}
{% block body %}
<div class="container">


    {# Header / Titre de la page #}
    <header class="page-header">
        <h1 class="page-title">{{ title }}</h1>
    </header>


    {# Barre d'actions (ajouter un produit) #}
    <div class="page-toolbar text-right mt-3">
        <a href="{{ path('category:new') }}" class="btn btn-primary btn-sm"><i class="ri-add-circle-line"></i> Ajouter une catégorie</a>
        <a href="{{ path('category:edit', {id: category.id})}}" class="btn btn-warning btn-sm">Modifier la catégorie</a>
        <a href="{{ path('category:delete', {id: category.id}) }}" class="btn btn-danger btn-sm">Supprimer la catégorie</a>
    </div>


    {# Info du Produit #}
    <table class="table table-hover mt-5">
        <tbody>
        <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ category.color }}</td>
            </tr>
            <tr>
                <th>Illustration</th>
                <td><img src="{{ asset('uploads/images/' ~ category.illustration) }}" alt="{{ category.name }}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category:index') }}">Retour</a>

    <a href="{{ path('category:edit', {'id': category.id}) }}">Modifier</a>

{% endblock %}
