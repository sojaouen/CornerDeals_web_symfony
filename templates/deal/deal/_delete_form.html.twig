<form method="post" action="{{ path('deal:delete', {'id': deal.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce deal ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ deal.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
