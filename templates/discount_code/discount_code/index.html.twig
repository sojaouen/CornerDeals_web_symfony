{% extends 'base.html.twig' %}

{% block title %}DiscountCode index{% endblock %}

{% block body %}
    <h1>DiscountCode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Code</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discount_code in discount_codes %}
            <tr>
                <td>{{ discount_code.id }}</td>
                <td>{{ discount_code.title }}</td>
                <td>{{ discount_code.code }}</td>
                <td>{{ discount_code.description }}</td>
                <td>
                    <a href="{{ path('discount_code:show', {'id': discount_code.id}) }}">show</a>
                    <a href="{{ path('discount_code:edit', {'id': discount_code.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('discount_code:new') }}">Create new</a>
{% endblock %}
