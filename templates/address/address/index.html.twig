{% extends 'base.html.twig' %}

{% set controller_name = "Liste des Adresses" %}
{% set title = "Adresses" %}

{% block title %}{{ title }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">


    {# Header / Titre de la page #}
    <header class="page-header">
        <h1 class="display-4 text-center my-5">{{ title }}</h1>
    </header>

    {# Barre d'actions (ajouter un produit) #}
    <div class="page-toolbar text-right mt-3">
        <a href="{{ path('address:new') }}" class="btn btn-primary btn-sm"><i class="ri-add-circle-line"></i> Ajouter
            une adresse</a>
    </div>

    {# Tableau de la liste des produits #}
    <table class="table table-hover mt-5">
        {# Entete du tableau HTML #}
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Numéro de rue</th>
            <th>Extension du numéro de rue</th>
            <th>Type de rue</th>
            <th>Nom de la rue</th>
            <th>Nom de l'immeuble</th>
            <th>Nom de l'établissement</th>
            <th>Étage</th>
            <th>Numéro de l'étage</th>
            <th>Code Postal</th>
            <th>Préfixe code postal</th>
            <th>Sufffixe code postal</th>
            <th>Ville</th>
            <th>Cedex</th>
            <th>Numéro boite postale</th>
            <th>Localité</th>
            <th>Zone administrative niveau 1</th>
            <th>Zone administrative niveau 2</th>
            <th>Zone administrative niveau 3</th>
            <th>Zone administrative niveau 4</th>
            <th>Zone administrative niveau 5</th>
            <th>Pays</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Altitude</th>
            <th>Est un appartemment</th>
            <th>À un ascenseur</th>
            <th>Créé le</th>
            <th>Mis à jour le</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.streetNumber }}</td>
                <td>{{ address.streetNumberExtension }}</td>
                <td>{{ address.streetType }}</td>
                <td>{{ address.streetName }}</td>
                <td>{{ address.building }}</td>
                <td>{{ address.establishment }}</td>
                <td>{{ address.floor }}</td>
                <td>{{ address.floorNumber }}</td>
                <td>{{ address.postalCode }}</td>
                <td>{{ address.postalCodePrefix }}</td>
                <td>{{ address.postalCodeSuffix }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.cedex }}</td>
                <td>{{ address.postBoxCode }}</td>
                <td>{{ address.locality }}</td>
                <td>{{ address.adminitrativeAreaLevel1 }}</td>
                <td>{{ address.adminitrativeAreaLevel2 }}</td>
                <td>{{ address.adminitrativeAreaLevel3 }}</td>
                <td>{{ address.adminitrativeAreaLevel4 }}</td>
                <td>{{ address.adminitrativeAreaLevel5 }}</td>
                <td>{{ address.country }}</td>
                <td>{{ address.latitude }}</td>
                <td>{{ address.longitude }}</td>
                <td>{{ address.altitude }}</td>
                <td>{{ address.isFlat ? 'Yes' : 'No' }}</td>
                <td>{{ address.hasElevator ? 'Yes' : 'No' }}</td>
                <td>{{ address.createdAt ? address.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ address.updatedAt ? address.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('address_show', {'id': address.id}) }}">Afficher</a>
                    <a href="{{ path('address_edit', {'id': address.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="30">Aucune adresse</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
